@model NetApplication.Models.Profiles

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1>Add Profile</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Profile" asp-action="Add">
                        <div class="form-group mt-2">
                            <label asp-for="Name"></label>
                            <select class="form-select" asp-for="Name">
                                <option selected>Please select profile name</option>
                                <option value="LinkedIn">LinkedIn</option>
                                <option value="Github">Github</option>
                                <option value="Slack">Slack</option>
                                <option value="Leetcode">Leetcode</option>
                                <option value="HackerRank">HackerRank</option>
                                <option value="HackerEarth">HackerEarth</option>
                                <option value="Geek for Geeks">Geek for geeks</option>
                            </select>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Link"></label>
                            <input type="text" asp-for="Link" class="form-control" placeholder="Enter Link" />
                        </div>
                        <input type="submit" class="btn btn-primary mt-3 float-end" value="Save" />
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>