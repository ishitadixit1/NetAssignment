@model NetApplication.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}
<head>
    <style>
        body {
            background-image: url("https://img.freepik.com/free-vector/blue-curve-background_53876-113112.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            overflow-x: hidden;
        }

        .login-form {
            margin: 140px 0px 100px 280px;
           
        }
    </style>
</head>
<div class="container login-form">
    <div class="row">
        <div class="col-6">
            <div class="text-center m-2">
                <h2>Login form</h2>
            </div>
            <h6 class="text-center text-success">@TempData["success"]</h6>
            <h6 class="text-center text-success">@TempData["passChange"]</h6>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group mt-2">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" class="form-control" placeholder="Enter username" />
                    <span class="text-danger" asp-validation-for="Username"></span>
                    <span class="text-danger">@TempData["userError"]</span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <span class="text-danger">@TempData["loginError"]</span>
                </div>
                <span class="mt-4 float-start">New user? <a class="text-primary text-decoration-none" asp-controller="Account" asp-action="Signup">Register here</a></span>
                <input type="submit" class="btn btn-primary mt-3 float-end" value="Login" />
            </form>
        </div>
    </div>
</div>

