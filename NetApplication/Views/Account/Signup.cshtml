@model NetApplication.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<head>
    <style>
        body {
            background-image: url("https://img.freepik.com/free-vector/blue-curve-background_53876-113112.jpg");
            background-size: cover;
            background-repeat:no-repeat;
            overflow-x: hidden;
        }

        .sign-form {
            margin: 40px 0px 100px 280px;
        }
    </style>
</head>

<div class="container sign-form">
    <div class="row">
        <div class="col-6">
            <div class="text-center m-2">
                <h2>User registration form</h2>
            </div>
            <form method="post" asp-controller="Account" asp-action="Signup">
                <div class="form-group mt-2">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="MobileNo"></label>
                    <input type="text" asp-for="MobileNo" class="form-control" placeholder="Enter Mobile No" />
                    <span class="text-danger" asp-validation-for="MobileNo"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Address"></label>
                    <input type="text" asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
                <span class="mt-4 float-start">Already registered? <a class="text-primary text-decoration-none" asp-controller="Account" asp-action="Login">Login</a></span>
                <input type="submit" class="btn btn-primary mt-3 float-end" value="Register" />
            </form>
        </div>
    </div>
</div>