@model NetApplication.Models.ChangePassword

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1>Change Password</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="ChangePassword">
                        <div class="form-group mt-2">
                            <label asp-for="currentPassword"></label>
                            <input type="text" asp-for="currentPassword" class="form-control" placeholder="Enter current password" />
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="newPassword"></label>
                            <input type="text" asp-for="newPassword" class="form-control" placeholder="Enter new password" />
                        </div>
                        <span class="text-danger float-start">@TempData["passFail"]</span>
                        <input type="submit" class="btn btn-primary mt-3 float-end" value="Change Password" />
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>